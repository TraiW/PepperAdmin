<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="147dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/xml_username"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_account_user"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColor="@color/windowBackground"

        android:textColorHint="@color/windowBackground" />

    <EditText
        android:id="@+id/xml_password"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/xml_username"
        android:layout_alignStart="@+id/xml_username"
        android:layout_alignLeft="@+id/xml_username"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_account_pass"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/windowBackground"
        android:textColorHint="@color/windowBackground" />

    <Button
        android:id="@+id/xml_buton_login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/xml_password"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/button_bg_rounded_corners"
        android:text="Login"
        android:textColor="#fff"
        android:textSize="18sp" />





</RelativeLayout>
